@model UpdatePurchaseDto

@{
    ViewData["Title"] = "UpdatePurchase";
}

<div class="card shadow border-0">
    <div class="card-header bg-warning text-dark">
        <h5 class="mb-0">✏️ Yeni Alım Ekle</h5>
    </div>

    <div class="card-body">
        <form method="post">
            <div class="mb-3">

                <input type="hidden" asp-for="ID" />

                <label asp-for="PRODUCT_ID" class="form-label fw-semibold">Ürün</label>
                <select asp-for="PRODUCT_ID" class="form-control" asp-items="@ViewBag.products">
                    <option selected disabled>Ürün Seçiniz</option>
                </select>
            </div>

            <div class="mb-3">
                <label asp-for="CUSTOMER_ID" class="form-label fw-semibold">Müşteri</label>
                <select asp-for="CUSTOMER_ID" class="form-control" asp-items="@ViewBag.customers">
                    <option selected disabled>Müşteri Seçiniz</option>
                </select>
            </div>

            <div class="mb-3">
                <label asp-for="QUANTITY" class="form-label fw-semibold">Miktar</label>
                <input asp-for="QUANTITY" type="number" step="0.01" class="form-control" />
            </div>

            <div class="mb-3">
                <label asp-for="PRICE" class="form-label fw-semibold">Birim Fiyat</label>
                <input asp-for="PRICE" type="number" step="0.01" class="form-control" />
            </div>

            <div class="mb-3">
                <label asp-for="AMOUNT" class="form-label fw-semibold">Toplam Tutar</label>
                <input asp-for="AMOUNT" type="number" step="0.01" class="form-control" />
            </div>

            <div class="mb-3">
                <label asp-for="DATE" class="form-label fw-semibold">Tarih</label>
                <input asp-for="DATE" type="date" class="form-control" />
            </div>

            <button type="submit" class="btn btn-primary">
                <i class="fa fa-save"></i> Kaydet
            </button>
        </form>
    </div>
</div>
