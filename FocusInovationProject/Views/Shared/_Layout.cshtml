<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - Focus Inovation</title>

    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">

    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />

    <link rel="stylesheet" href="https://cdn3.devexpress.com/jslib/25.2.3/css/dx.material.blue.dark.css" />

    <style>
        :root {
            --bg: #0f172a;
            --sidebar: #1e293b;
            --nav: #111827;
            --text: #f1f5f9;
            --muted: #94a3b8;
            --accent: #10b981;
            --border: rgba(255,255,255,0.05);
        }

        body {
            margin: 0;
            font-family: 'Inter', sans-serif;
            color: var(--text);
            background-color: var(--bg);
            display: flex;
            height: 100vh;
            overflow: hidden;
        }

        /* === GLOBAL YAZI DÜZELTMELERİ === */

        /* Sayfa genelindeki başlıklar (H1-H6) beyaz olsun */
        h1, h2, h3, h4, h5, h6, .navbar h1 {
            color: #ffffff !important;
        }

        /* BEYAZ KARTLARIN İÇİNDEKİ HER ŞEY SİYAH OLSUN */
        .card, .card-body, .card label, .card .form-label, .card h1, .card h2, .card h3, .card h4, .card h5, .card h6 {
            color: #111827 !important; /* Koyu Gri/Siyah */
        }

            /* Inputların içindeki yazılar siyah olsun */
            .card .form-control, .card .form-select {
                color: #000000 !important;
                border-color: #cbd5e1 !important;
            }

        /* === SIDEBAR & CONTENT === */
        .sidebar {
            width: 260px;
            background: var(--sidebar);
            display: flex;
            flex-direction: column;
            border-right: 1px solid var(--border);
        }

        .sidebar-header {
            font-size: 22px;
            font-weight: 700;
            padding: 25px;
            text-align: center;
            border-bottom: 1px solid var(--border);
            color: var(--accent);
        }

        .nav-links {
            flex-grow: 1;
            padding: 15px 0;
            overflow-y: auto;
        }

            .nav-links .nav-group {
                font-size: 11px;
                text-transform: uppercase;
                color: var(--muted);
                padding: 10px 25px;
                letter-spacing: 1px;
                font-weight: 700;
            }

            .nav-links a {
                display: flex;
                align-items: center;
                gap: 12px;
                color: var(--muted);
                text-decoration: none;
                padding: 12px 25px;
                font-weight: 500;
            }

                .nav-links a:hover, .nav-links a.active {
                    background: rgba(16, 185, 129, 0.1);
                    color: var(--accent);
                    border-left: 4px solid var(--accent);
                }

        .main {
            flex-grow: 1;
            display: flex;
            flex-direction: column;
            overflow: hidden;
        }

        .navbar {
            background: var(--nav);
            border-bottom: 1px solid var(--border);
            padding: 15px 30px;
            display: flex;
            align-items: center;
            justify-content: space-between;
        }

        .content {
            flex-grow: 1;
            overflow-y: auto;
            padding: 30px;
            background-image: radial-gradient(circle at 50% 50%, #1e293b 0%, #0f172a 100%);
        }

        .footer {
            text-align: center;
            padding: 12px;
            font-size: 13px;
            color: var(--muted);
            background: var(--nav);
            border-top: 1px solid var(--border);
        }
    </style>
</head>

<body>
    <aside class="sidebar">
        <div class="sidebar-header">
            <i class="fa-solid fa-microchip"></i> FOCUS
        </div>
        <nav class="nav-links">
            <div class="nav-group">Genel</div>
            <a href="/Home/Index"><i class="fa-solid fa-gauge-high"></i> Dashboard</a>

            <div class="nav-group">Yönetim</div>
            <a href="/Category/Index"><i class="fa-solid fa-tags"></i> Kategoriler</a>
            <a href="/Product/Index"><i class="fa-solid fa-box-archive"></i> Ürünler</a>
            <a href="/Customer/Index"><i class="fa-solid fa-users"></i> Müşteriler</a>

            <div class="nav-group">İşlemler</div>
            <a href="/Sale/Index"><i class="fa-solid fa-cart-shopping"></i> Satışlar</a>
            <a href="/Purchase/Index"><i class="fa-solid fa-truck-moving"></i> Alımlar</a>

            <div class="nav-group">Raporlar</div>
            <a href="/Category/CategorySalesReportView"><i class="fa-solid fa-chart-line"></i> Satış Raporu</a>
            <a href="/Category/StockReportView"><i class="fa-solid fa-warehouse"></i> Stok Durumu</a>
        </nav>
        <div style="padding: 20px;">
            <a href="/Login/Logout" style="color: #f87171; text-decoration: none; font-weight: 600;">
                <i class="fa-solid fa-power-off"></i> Çıkış Yap
            </a>
        </div>
    </aside>

    <main class="main">
        <div class="navbar">
            <h1 style="margin:0">@ViewData["Title"]</h1>
            <div class="user-info" style="color: var(--muted)">
                <i class="fa-solid fa-circle-user" style="color: var(--accent)"></i> @User.Identity?.Name
            </div>
        </div>

        <div class="content">
            @RenderBody()
        </div>

        <footer class="footer">
            &copy; 2025 Focus Inovation - Profesyonel Panel
        </footer>
    </main>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn3.devexpress.com/jslib/25.2.3/js/dx.all.js"></script>
    <script src="https://cdn3.devexpress.com/jslib/25.2.3/js/dx.aspnet.data.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>